module i2c_ctrl (
    input clk, reset, start, stop,
    output reg scl, sda
);
    always @(posedge clk or posedge reset) begin
        if (reset) begin
            scl <= 1;
            sda <= 1;
        end else if (start) begin
            sda <= 0;
        end else if (stop) begin
            sda <= 1;
        end
    end
endmodule
